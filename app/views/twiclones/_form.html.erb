
<div class="container">
  <%= form_with(model: @twiclone, local: true, url: choose_new_or_edit ) do |form| %>
    <% if @twiclone.errors.any? %>
       <div class="error_explanation">
         <h2><%= @twiclone.errors.count %>errors.</h2>
         <ul>
           <% @twiclone.errors.full_messages.each do |message| %>
            <li><%= message %></li>
           <% end %>
         </ul>
       </div>
    <% end %>

    <div class ="content">
      <%= form.label :"tweet" %>
      <ul>
        <li><%= form.text_field :content %></li>
        <li><%= form.submit "送信" %></li>
        <li><%= link_to "戻る", twiclones_path %></li>
      </ul>
    </div>
  <% end %>
</div>
